    {
      "name": "PayOS Tests",
      "item": [
        {
          "name": "1. Create Top-up Payment Link",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has checkout URL\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.checkoutUrl).to.exist;",
                  "    pm.globals.set(\"checkout_url\", jsonData.checkoutUrl);",
                  "});",
                  "",
                  "pm.test(\"Response has order code\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.orderCode).to.exist;",
                  "    pm.globals.set(\"order_code\", jsonData.orderCode);",
                  "});",
                  "",
                  "pm.test(\"Amount matches request\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.amount).to.eql(500000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/payos/create-topup-link?userId={{user_id}}&amount=500000&description=Test wallet top-up",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payos", "create-topup-link"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{user_id}}"
                },
                {
                  "key": "amount",
                  "value": "500000"
                },
                {
                  "key": "description",
                  "value": "Test wallet top-up"
                }
              ]
            }
          },
          "response": []
        },
