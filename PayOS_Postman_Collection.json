{
  "info": {
    "name": "PayOS Integration API",
    "description": "Collection for testing PayOS integration endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
